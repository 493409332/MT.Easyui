@{
    ViewBag.Title = "角色管理";
}

<style>
    .datagrid-btn-separator {
        float: left;
        height: 18px;
        border-left: 1px solid #444;
        border-right: 1px solid #777;
        margin: 4px 1px;
    }
</style>

 

<div id="layout">
    <div region="west" iconcls="icon-chart_organisation" split="true" title="部门树" style="width: 210px; padding: 5px" collapsible="false">
        <ul id="deptree"></ul>
    </div>
    <div region="center" title="角色列表" iconcls="icon-list" style="padding: 2px; overflow: hidden">
      
        <div id="toolbar" style="height: 24px;">
            <a title="添加" icon="icon-add" class="easyui-linkbutton l-btn l-btn-plain" plain="true" href="javascript:;" style="float: left" id="a_add">添加 </a>
            <div class="datagrid-btn-separator"></div>
            <a title="编辑" icon="icon-pencil" class="easyui-linkbutton l-btn l-btn-plain" plain="true" href="javascript:;" style="float: left" id="a_edit">编辑 </a>
            <div class="datagrid-btn-separator"></div>
            <a title="删除" icon="icon-delete3" class="easyui-linkbutton l-btn l-btn-plain" plain="true" href="javascript:;" style="float: left" id="a_delete">删除 </a>
            <div class="datagrid-btn-separator"></div>
            <a id="a_set" style="float: left" href="javascript:;" plain="true" class="easyui-linkbutton" icon="icon-wrench_orange" title="分配权限">分配权限</a>
            <div class="datagrid-btn-separator"></div>
              <a title="搜索" icon="icon-search" class="easyui-linkbutton l-btn l-btn-plain" plain="true" href="javascript:;" style="float: left" id="a_search"> 搜索 </a>
        </div>
        <table id="roleGrid"></table>

    </div>
</div>

<script type="text/javascript" src="~/Scripts/avalon/avalon.js" data-main="/ScriptsLogical/Role/main.js"></script>
